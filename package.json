{
    "name": "blog",
    "version": "0.1.0",
    "private": true,
    "main": "index.js",
    "scripts": {
        "start": "node bin/www",
        "dev": "./node_modules/.bin/nodemon bin/www",
        "prd": "pm2 start bin/www",
        "test": "echo \"Error: no test specified\" && exit 1",
        "go": "nodemon index.js --watch build/webpack.config.js",
        "start:dev": "better-npm-run start:dev",
        "start:prod": "better-npm-run start:prod",
        "build": "better-npm-run build",
        "watch:assets": "npm run clean && webpack --watch --colors --display-error-details --config build/webpack.config.js",
        "clean": "rimraf public/*"
    },
    "betterScripts": {
        "start:dev": {
            "command": "npm-run-all --parallel clean go",
            "env": {
                "NODE_ENV": "development"
            }
        },
        "start:prod": {
            "command": "npm run build && node index.js",
            "env": {
                "NODE_ENV": "production"
            }
        },
        "build": {
            "command": "npm-run-all --parallel clean && webpack --colors --display-error-details --config build/webpack.config.js",
            "env": {
                "NODE_ENV": "production"
            }
        }
    },
    "dependencies": {
        "bootstrap": "^3.3.7",
        "debug": "^2.6.3",
        "file-loader": "^1.1.6",
        "jquery": "^3.2.1",
        "koa": "^2.2.0",
        "koa-bodyparser": "^3.2.0",
        "koa-convert": "^1.2.0",
        "koa-ejs": "^4.1.0",
        "koa-json": "^2.0.2",
        "koa-logger": "^2.0.1",
        "koa-onerror": "^1.2.1",
        "koa-router": "^7.1.1",
        "koa-static": "^3.0.0",
        "koa-views": "^5.2.1",
        "lodash": "^4.17.4",
        "pug": "^2.0.0-rc.1",
        "supervisor": "^0.12.0"
    },
    "devDependencies": {
        "nodemon": "^1.8.1",
        "assets-webpack-plugin": "^3.5.1",
        "babel-loader": "^7.1.0",
        "babel-preset-env": "^1.5.2",
        "babel-register": "^6.24.1",
        "better-npm-run": "0.0.15",
        "chalk": "^1.1.3",
        "copy-webpack-plugin": "^4.0.1",
        "css-loader": "^0.28.4",
        "eventsource-polyfill": "^0.9.6",
        "extract-text-webpack-plugin": "^2.1.2",
        "html-loader": "^0.4.5",
        "html-webpack-plugin": "^2.28.0",
        "koa-webpack-dev-middleware": "^2.0.0",
        "koa-webpack-middleware": "^1.0.5",
        "mz": "^2.6.0",
        "node-sass": "^4.5.3",
        "npm-run-all": "^4.0.2",
        "open-browser-webpack-plugin": "0.0.5",
        "pre-commit": "^1.2.2",
        "resolve-path": "^1.3.3",
        "sass-loader": "^6.0.6",
        "style-loader": "^0.18.2",
        "url-loader": "^0.5.9",
        "webpack": "^3.0.0",
        "webpack-bundle-analyzer": "^2.8.2",
        "webpack-dev-middleware": "^1.12.0"
    }
}